:javascript
  $(document).ready(function(){
      $('#adjustmentsTable').dataTable( {
  	    "bJQueryUI": true,
        "sPaginationType": "full_numbers",
        "aaSorting": [[1,'asc'], [2, 'desc']]
      } );
  });
%table#adjustmentsTable
  %thead
    %tr
      %th Relationship
      %th Player / Character
      %th Adjustment date
      %th Adjustment type
      %th Amount
      %th Reason
      %th
      %th
      %th
  %tbody
    - @adjustments.each do |adjustment|
      - cache adjustment do
        %tr
          %td= adjustment.adjustable_type
          %td= adjustment.name
          %td= adjustment.adjustment_date
          %td= adjustment.adjustment_type
          %td= adjustment.amount
          %td= adjustment.reason
          %td= link_to 'Show', adjustment
          %td= link_to 'Edit', edit_adjustment_path(adjustment)
          %td= link_to 'Destroy', adjustment, :confirm => 'Are you sure?', :method => :delete

%br/
%br/
= link_to 'New Adjustment', new_adjustment_path
