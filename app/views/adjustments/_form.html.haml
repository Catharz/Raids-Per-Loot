= form_for @adjustment do |f|
  -if @adjustment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@adjustment.errors.count, "error")} prohibited this adjustment from being saved:"
      %ul
        - @adjustment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :adjustment_date
    = f.date_select :adjustment_date
  .field
    = f.label :adjustment_type
    = f.text_field :adjustment_type
  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :reason
    = f.text_area :reason
  .field
    = f.label :loot_type_id
    = f.number_field :loot_type_id
  .field
    = f.label :adjustable_id
    = f.number_field :adjustable_id
  .field
    = f.label :adjustable_type
    = f.text_field :adjustable_type
  .actions
    = f.submit 'Save'
