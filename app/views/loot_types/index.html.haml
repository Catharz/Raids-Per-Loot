%table#dataTable
  %thead
    %tr
      %th Name
      %th Default Loot Method
      %th
      %th
      %th
  %tbody
    - @loot_types.each do |loot_type|
      - cache loot_type do
        %tr
          %td= loot_type.name
          %td= case loot_type.default_loot_method when 'n' then 'Need' when 'r' then 'Random' when 'b' then 'Bid' else 'Trash' end
          %td= link_to 'Show', loot_type
          %td= link_to 'Edit', edit_loot_type_path(loot_type)
          %td= link_to 'Destroy', loot_type, :confirm => 'Are you sure?', :method => :delete
%br/
%br/
= link_to 'New Loot type', new_loot_type_path
