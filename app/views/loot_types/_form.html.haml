= form_for(@loot_type) do |f|
  - if @loot_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@loot_type.errors.count, "error")
        prohibited this loot_type from being saved:
      %ul
        - @loot_type.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :default_loot_method
    %br/
    = f.label "Need"
    = f.radio_button :default_loot_method, "n", :id => "need"
    = f.label "Random"
    = f.radio_button :default_loot_method, "r", :id => "random"
    = f.label "Bid"
    = f.radio_button :default_loot_method, "b", :id => "bid"
    = f.label "Trash"
    = f.radio_button :default_loot_method, "t", :id => "trash"
  .actions
    = f.submit
