#tabBook
  %ul
    %li= link_to "Details", "#details"
    %li= link_to "Instances", "#instances"
    %li= link_to "Players", "#players"
    %li= link_to "Characters", "#characters"
    %li= link_to "Kills", "#kills"
    %li= link_to "Drops", "#drops"

  #details
    %p#raid_date
      Raid date:
      = @raid.raid_date
    %p#raid_type_name
      Raid type:
      = @raid.raid_type_name
    %p#instances_count
      Instances:
      = @raid.instances.count
    %p#players_count
      Players:
      = @raid.players.count
    %p#characters_count
      Characters:
      = @raid.characters.count
    %p#kills_count
      Kills:
      = @raid.kills.count
    %p#drops_count
      Drops:
      = @raid.drops.count

  #instances
    = render 'tabs/instances', :"@instance_list" => @raid.instances

  #players
    = render 'tabs/players', :"@player_list" => @raid.players

  #characters
    = render 'tabs/characters', :"@character_list" => @raid.characters

  #kills
    = render 'tabs/mobs', :"@mob_list" => @raid.kills

  #drops
    = render 'tabs/drops', :"@drop_list" => @raid.drops