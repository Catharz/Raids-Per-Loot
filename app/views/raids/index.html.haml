%table#dataTable
  %thead
    %tr
      %th Raid date
      %th Instances
      %th Players
      %th Characters
      %th Kills
      %th Drops
      %th
  %tbody
    - @raids.each do |raid|
      - cache raid do
        %tr
          %td= link_to raid.raid_date, raid
          %td= raid.instances.count
          %td= raid.players.count
          %td= raid.characters.count
          %td= raid.kills.count
          %td= raid.drops.count
          %td= link_to 'Destroy', raid, :confirm => 'Are you sure?', :method => :delete
%br/
%br/
= link_to 'New Raid', new_raid_path
