= semantic_form_for @instance do |f|
  - if @instance.errors.any?
    #error_explanation
      %h2
        = pluralize(@instance.errors.count, "error")
        prohibited this instance from being saved:
      %ul
        - @instance.errors.full_messages.each do |msg|
          %li= msg
  - f.inputs do
    = f.input :zone
    = f.input :start_time
    #attendees
      = f.input :characters, :as => :check_boxes
    = f.actions do
      = f.action :submit
