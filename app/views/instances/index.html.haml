- require 'active_support/time_with_zone'
%table#instancesTable
  %thead
    %tr
      %th Zone
      %th Start time
      %th End time
      %th Players
      %th Characters
      %th Kills
      %th
  %tbody
    - @instances.each do |instance|
      - cache instance do
        %tr
          %td= link_to instance.zone ? instance.zone.name : "Unknown", instance
          %td= instance.start_time.strftime('%H:%M:%S')
          %td= instance.end_time.strftime('%H:%M:%S')
          %td= instance.players.count
          %td= instance.characters.count
          %td= instance.kills.count
          %td= link_to 'Destroy', instance, :confirm => 'Are you sure?', :method => :delete
%br/
%br/
= link_to 'New Instance', new_instance_path
