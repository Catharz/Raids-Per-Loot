<%= form_for(@page) do |f| %>
    <% if @page.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

          <ul>
            <% @page.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :title %>
      <br/>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :navlabel %>
      <br/>
      <%= f.text_field :navlabel %>
    </div>
    <div class="field">
      <%= f.label :body %>
      <br/>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.label :admin %>
      <br/>
      <%= f.check_box :admin %>
    </div>
    <div class="field">
      <%= f.label :parent_id %>
      <br/>
      <%= f.collection_select :parent_id, Page.find_main, :id, :title, :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label :position %>
      <br/>
      <%= f.text_field :position, :size => 3 %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
