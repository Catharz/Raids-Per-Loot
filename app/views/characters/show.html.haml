%p#notice= notice

%p
  %strong Name:
  = @character.name
%p
  %strong Archetype:
  = @character.archetype_id ? @character.archetype.name : "Unknown"
%p
  %strong Character Type:
  = @character.current_char_type ? case @character.current_char_type.char_type when "m" then "Main" when "r" then "Raid Alternate" else "General Alternate" end : "Unknown"

%p
  %strong Character Type History
= render 'character_types'
%br/
%p
  %strong Drop History
= render 'drops'
%br/
%p
  %strong Attendance History
= render 'instances'
%br/
%br/
= link_to 'Edit', edit_character_path(@character)
\|
= link_to 'Back', characters_path
