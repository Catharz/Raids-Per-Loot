:javascript
  $(document).ready(function(){
      $('#characterTypesTable').dataTable( {
        "sPaginationType": "full_numbers",
        "sType": "date",
        "aaSorting": [[1,'desc']]
      } );
  });
%table#characterTypesTable
  %thead
    %tr
      %th Player
      %th Date Effective
      %th Character Type
      %th
      %th
      %th
  %tbody
    - @character_types.each do |character_type|
      %tr
        %td= character_type.character.name
        %td= character_type.effective_date
        %td= case character_type.char_type when "m" then "Main" when "r" then "Raid Alternate" else "General Alternate" end
        %td= link_to 'Show', character_type
        %td= link_to 'Edit', edit_character_type_path(character_type)
        %td= link_to 'Destroy', character_type, :confirm => 'Are you sure?', :method => :delete
%br
%br

= link_to 'New Character type', new_character_type_path
