= error_messages_for :user
= form_for :user, :url => users_path do |f|
  %p
    = label_tag 'name'
    %br/
    = f.text_field :name
  %p
    = label_tag 'email'
    %br/
    = f.text_field :email
  %p
    = label_tag 'role'
    - for role in User::ROLES
      = check_box_tag 'user[roles][]', role, @user.roles.include?(role)
      = h role.humanize
    = hidden_field_tag 'user[roles][]'
  %p= submit_tag 'Sign up'
