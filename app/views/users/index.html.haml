%table#dataTable
  %thead
    %tr
      %th Login
      %th Name
      %th Email
      %th
      %th
      %th
  %tbody
    - @users.each do |user|
      - cache user do
        %tr
          %td= user.login
          %td= user.name
          %td= user.email
          %td= link_to 'Show', user
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Delete', user, :confirm => "Are you sure you want to delete '#{user.login}'?", :method => :delete
%br/
%br/
= link_to 'New User', new_user_path
