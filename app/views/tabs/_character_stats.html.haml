#subTabBook
  %ul
    %li= link_to "General", "#general"
    %li= link_to "Offensive", "#offensive"
    %li= link_to "Defensive", "#defensive"
    %li= link_to "Casting", "#casting"
    %li= link_to "Melee Weapon", "#melee_weapon"
    %li= link_to "Spell Weapon", "#spell_weapon"
    %li= link_to "Savagery", "#savagery"
    %li= link_to "Player Vs Player", "#pvp"
    %li= link_to "Trade Skill", "#trade_skill"

  #general
    %p
      %strong Health:
      %br/
      Max:
      = @data[:stats][:health][:max]
      %br/
      Regen:
      = @data[:stats][:health][:regen]
      %br/
    %p
      %strong Power:
      %br/
      Max:
      = @data[:stats][:power][:max]
      %br/
      Regen:
      = @data[:stats][:power][:regen]
      %br/
    %p
      %strong Agility:
      %br/
      Base:
      = @data[:stats][:agi][:base]
      %br/
      Effective:
      = @data[:stats][:agi][:effective]
    %p
      %strong Intelligence:
      %br/
      Base:
      = @data[:stats][:int][:base]
      %br/
      Effective:
      = @data[:stats][:int][:effective]
    %p
      %strong Stamina:
      %br/
      Base:
      = @data[:stats][:sta][:base]
      %br/
      Effective:
      = @data[:stats][:sta][:effective]
    %p
      %strong Strength:
      %br/
      Base:
      = @data[:stats][:str][:base]
      %br/
      Effective:
      = @data[:stats][:str][:effective]
    %p
      %strong Wisdom:
      %br/
      Base:
      = @data[:stats][:wis][:base]
      %br/
      Effective:
      = @data[:stats][:wis][:effective]
    %p
      %strong Run Speed:
      = @data[:stats][:runspeed]
      %br/
      %strong Personal Status:
      = @data[:stats][:personal_status_points]

  #offensive
    %p
      %strong Accuracy:
      = @data[:stats][:combat][:accuracy]
      %br/
      %strong AE Auto Attack:
      = @data[:stats][:combat][:aeautoattackchance]
      %br/
      %strong Attack Speed:
      = @data[:stats][:combat][:attackspeed]
      %br/
      %strong Base Modifier:
      = @data[:stats][:combat][:basemodifier]
      %br/
      %strong Critical Bonus:
      = @data[:stats][:combat][:critbonus]
      %br/
      %strong Critical Chance:
      = @data[:stats][:combat][:critchance]
      %br/
      %strong Double Attack:
      = @data[:stats][:combat][:doubleattackchance]
      %br/
      %strong DPS:
      = @data[:stats][:combat][:dps]
      %br/
      %strong Flurry:
      = @data[:stats][:combat][:flurry]
      %br/
      %strong Hate Gain Mod:
      = @data[:stats][:combat][:hategainmod]
      %br/
      %strong Strikethrough:
      = @data[:stats][:combat][:strikethrough]

  #defensive
    %p
      %strong Base Avoidance Bonus:
      = @data[:stats][:combat][:baseavoidancebonus]
      %br/
      %strong Block Chance:
      = @data[:stats][:combat][:blockchance]
      %br/
      %strong Armour:
      = @data[:stats][:defense][:armor]
      %br/
      %strong Avoidance:
      = @data[:stats][:defense][:avoidance]
      %br/
      %strong Block:
      = @data[:stats][:defense][:block]
      %br/
      %strong Parry:
      = @data[:stats][:defense][:parry]

  #casting
    %p
      %strong Ability Modifier:
      = @data[:stats][:combat][:abilitymod]
      %br/
      %strong Spell Double Attack:
      = @data[:stats][:combat][:spelldoubleattackchance]
      %br/
      %strong Spell Time Cast %:
      = @data[:stats][:ability][:spelltimecastpct]
      %br/
      %strong Spell Time Recovery %:
      = @data[:stats][:ability][:spelltimerecoverypct]
      %br/
      %strong Spell Time Reuse %:
      = @data[:stats][:ability][:spelltimereusepct]
      %br/
      %strong Spell Time Reuse Spell Only:
      = @data[:stats][:ability][:spelltimereusespellonly]

  #melee_weapon
    %p
      %strong Primary:
      %br/
      Damage:
      = "#{@data[:stats][:weapon][:primarymindamage]} - #{@data[:stats][:weapon][:primarymaxdamage]}"
      %br/
      Delay:
      = @data[:stats][:weapon][:primarydelay]
    %p
      %strong Secondary:
      %br/
      Damage:
      = "#{@data[:stats][:weapon][:secondarymindamage]} - #{@data[:stats][:weapon][:secondarymaxdamage]}"
      %br/
      Delay:
      = @data[:stats][:weapon][:secondarydelay]
    %p
      %strong Ranged:
      %br/
      Damage:
      = "#{@data[:stats][:weapon][:rangedmindamage]} - #{@data[:stats][:weapon][:rangedmaxdamage]}"
      %br/
      Delay:
      = @data[:stats][:weapon][:rangeddelay]

  #spell_weapon
    %p
      %strong Auto Attack Chance:
      = @data[:stats][:combat][:spellweaponaeautoattackchance]
      %br/
      %strong Attack Speed:
      = @data[:stats][:combat][:spellweaponattackspeed]
      %br/
      %strong Double Attack:
      = @data[:stats][:combat][:spellweapondoubleattackchance]
      %br/
      %strong DPS:
      = @data[:stats][:combat][:spellweapondps]
      %br/
      %strong Flurry:
      = @data[:stats][:combat][:spellweaponflurry]

  #savagery
    %p
      %strong Base Regen:
      = @data[:stats][:combat][:savageryregen]
      %br/
      %strong In Combat Regen:
      = @data[:stats][:combat][:incombatsavageryregen]
      %br/
      %strong Out Of Combat Regen:
      = @data[:stats][:combat][:outofcombatsavageryregen]
      %br/
      %strong Gain Mod:
      = @data[:stats][:combat][:savagerygainmod]
      %br/
      %strong Max Level:
      = @data[:stats][:combat][:maxsavagerylevel]

  #pvp
    %p
      %strong Double Attack Chance:
      = @data[:stats][:combat][:pvpdoubleattackchance]
      %br/
      %strong Spell Double Attack Chance:
      = @data[:stats][:combat][:pvpspelldoubleattackchance]
      %br/
      %strong Toughness:
      = @data[:stats][:combat][:pvptoughness]

  #trade_skill
    %p
      %strong Critical Chance:
      %br/
      Failure Modifier:
      = @data[:stats][:tradeskill][:critfailuremod]
      %br/
      Success Modifier:
      = @data[:stats][:tradeskill][:critsuccessmod]
    %p
      %strong Durability:
      %br/
      Added:
      = @data[:stats][:tradeskill][:durabilityadd]
      %br/
      Modifier:
      = @data[:stats][:tradeskill][:durabilitymod]
    %p
      %strong Progress:
      %br/
      Added:
      = @data[:stats][:tradeskill][:progressadd]
      %br/
      Modifier:
      = @data[:stats][:tradeskill][:progressmod]
    %p
      %strong Rare Harvest Chance:
      = @data[:stats][:tradeskill][:rareharvestchance]
      %br/
      %strong Success Modifier:
      = @data[:stats][:tradeskill][:successmod]