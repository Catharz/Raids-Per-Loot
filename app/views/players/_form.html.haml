= form_for(@player) do |f|
  - if @player.errors.any?
    #error_explanation
      %h2
        = pluralize(@player.errors.count, "error")
        prohibited this player from being saved:
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    %strong Main Character
    %br/
    = f.collection_select(:main_character_id, Player.all(:conditions => {:main_character_id => nil}, :order => :name), :id, :name, :include_blank => true)
  .field
    %strong Rank
    %br/
    = f.collection_select(:rank_id, Rank.all, :id, :name, :include_blank => true)
  .field
    %strong Class
    %br/
    = f.collection_select(:archetype_id, Archetype.base_archetypes, :id, :name, :include_blank => true)
  .actions
    = f.submit
