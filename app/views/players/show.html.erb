<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @player.name %>
</p>

<b>Raiding History</b>
<table>
  <tr>
    <th>Zone</th>
    <th>Date</th>
    <th>Looted</th>
  </tr>

  <% @player.instances.each do |instance| %>
      <tr>
        <td><%= instance.zone.name %></td>
        <td><%= instance.raid.raid_date %></td>
        <td>
          <table>
            <% instance.drops.each do |drop| %>
                <% if drop.player_name == @player.name %>
                    <td><%= drop.item_name %></td>
                <% end %>
            <% end %>
          </table>
        </td>
      </tr>
  <% end %>
</table>

<% if logged_in? %>
    <%= link_to 'Edit', edit_player_path(@player) %> |
<% end %>
<%= link_to 'Back', players_path %>
