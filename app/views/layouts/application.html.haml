%head
  = stylesheet_link_tag 'application'
  = javascript_include_tag 'application'
  = csrf_meta_tag
%body
  #popup{:title => 'Popup Dialog', :style => 'display:none'}
  #pagewrapper
    #header
      - if @pagetitle.nil?
        %p Raids Per Loot
      - else
        %p Raids Per Loot - #{@pagetitle}
    #smoothmenu1.ddsmoothmenu
      = render 'layouts/menu'
    %br
    #content.clear
      - flash.each do |key, msg|
        %div{id: key}
          %p{style: 'float:right;'}= link_to_function 'X', "$('##{key}').fadeOut();"
          %p= msg
          .clear
      = yield
    #footer
      %p Raids Per Loot