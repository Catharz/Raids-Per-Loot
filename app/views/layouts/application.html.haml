%head
  = stylesheet_link_tag 'application'
  = javascript_include_tag 'application'
  = csrf_meta_tag
%body
  #popup{:title => 'Popup Dialog', :style => 'display:none'}
  #pagewrapper
    #header
      - if @page.nil?
        %p Raids Per Loot
      - else
        %p Raids Per Loot - #{@page.navlabel}
    #smoothmenu1.ddsmoothmenu
      = render 'layouts/menu'
    %br
    - unless @page.nil?
      - unless @page.ancestors.empty?
        %p
          #breadcrumb
            - @page.ancestors.reverse.each do |page|
              = link_to h(page.navlabel), view_page_path(page.name)
              \&gt;
              = @page.navlabel
    #content.clear
      %p#notice= flash[:notice]
      = yield
    #footer
      %p Raids Per Loot