<%= form_for(@item) do |f| %>
    <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

          <ul>
            <% @item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :eq2_item_id %>
      <br/>
      <%= f.text_field :eq2_item_id %>
    </div>
    <div class="field">
      <%= f.label :info_url %>
      <br/>
      <%= f.text_field :info_url %>
    </div>
    <div class="field">
      <b>Type</b>
      <br/>
      <%= f.collection_select :loot_type_id, LootType.all(:order => 'name'), :id, :name, :include_blank => true %>
    </div>
    <div class="field">
      <b>Classes</b>
      <br/>
      <%= f.collection_select :archetype_ids, Archetype.all(:order => 'name'), :id, :name, {}, :multiple => true %>
    </div>
    <div class="field">
      <b>Slots</b>
      <br/>
      <%= f.collection_select :slot_ids, Slot.all(:order => 'name'), :id, :name, {}, :multiple => true %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
