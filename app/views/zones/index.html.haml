%table#dataTable
  %thead
    %tr
      %th Name
      %th Mobs
      %th Difficulty
      %th Last Run
      %th
      %th
      %th
  %tbody
    - @zones.each do |zone|
      %tr
        %td= zone.name
        %td= link_to 'Mobs', zone_mobs_path(zone)
        %td= zone.difficulty ? zone.difficulty.name : "Unknown"
        %td= zone.last_instance ? zone.last_instance.start_time : "Never"
        %td= link_to 'Show', zone
        %td= link_to 'Edit', edit_zone_path(zone)
        %td= link_to 'Destroy', zone, :confirm => 'Are you sure?', :method => :delete
%br/
%br/
= link_to 'New Zone', new_zone_path
