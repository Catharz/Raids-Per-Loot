%table#zonesTable
  %thead
    %tr
      %th Name
      %th Mobs
      %th Difficulty
      %th Times Run
      %th First Run
      %th Last Run
      %th Progression
      %th
      %th
      %th
  %tbody
    - @zones.each do |zone|
      - cache zone do
        %tr{id: "zone_#{zone.id}"}
          %td= zone.name
          %td= link_to 'Mobs', zone_mobs_path(zone), class: 'table-button'
          %td= zone.difficulty_name
          %td= zone.instances.count
          %td= zone.first_run
          %td= zone.last_run
          %td= zone.is_progression?
          %td= link_to 'Show', zone, class: 'table-button'
          %td= link_to 'Edit', edit_zone_path(zone), class: 'table-button'
          %td= link_to 'Destroy', zone, :confirm => 'Are you sure?', :method => :delete, class: 'table-button'
%br/
= link_to 'New Zone', new_zone_path, class: 'button'
