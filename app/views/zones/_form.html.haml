= form_for(@zone) do |f|
  - if @zone.errors.any?
    #error_explanation
      %h2
        = pluralize(@zone.errors.count, "error")
        prohibited this zone from being saved:
      %ul
        - @zone.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
