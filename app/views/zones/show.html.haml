#tabBook
  %ul
    %li= link_to "Details", "#details"
    %li= link_to "Mobs", "#mobs"
    %li= link_to "Instances", "#instances"
    %li= link_to "Items", "#items"
    %li= link_to "Drops", "#drops"

  #details
    %p
      %strong Name:
      = @zone.name
    %p
      %strong Difficulty:
      = @zone.difficulty ? @zone.difficulty.name : "Unknown"
    %p
      %strong Named Mobs:
      = @zone.mobs.count
    %p
      %strong Runs:
      = @zone.instances.count
    %p
      %strong Unique Items:
      = @zone.items.count
    %p
      %strong Drops:
      = @zone.drops.count
    %p
      %strong Progression:
      = @zone.progression ? "Yes" : "No"

  #mobs
    = render 'tabs/mobs', :"@mob_list" => @zone.mobs

  #instances
    = render 'tabs/instances', :"@instance_list" => @zone.instances

  #items
    = render 'tabs/items', :"@item_list" => @zone.items

  #drops
    = render 'tabs/drops', :"@drop_list" => @zone.drops
%br/
%br/
= link_to 'Edit', edit_zone_path(@zone)
|
\#{link_to 'Back', zones_path}
