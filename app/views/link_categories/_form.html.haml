= form_for(@link_category) do |f|
  - if @link_category.errors.any?
    #error_explanation
      %h2
        = pluralize(@link_category.errors.count, "error")
        prohibited this link_category from being saved:
      %ul
        - @link_category.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
