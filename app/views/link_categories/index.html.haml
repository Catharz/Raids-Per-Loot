%table#dataTable
  %thead
    %tr
      %th Title
      %th Description
      %th
      %th
      %th
  %tbody
    - @link_categories.each do |link_category|
      %tr{id: "link_category_#{link_category.id}"}
        %td= link_category.title
        %td= link_category.description
        %td= link_to 'Show', link_category, class: 'table-button', remote: true
        %td= link_to 'Edit', edit_link_category_path(link_category), class: 'table-button', remote: true
        %td= link_to 'Destroy', link_category, :confirm => 'Are you sure?', :method => :delete, class: 'table-button', remote: true
%br/
= link_to 'New Link category', new_link_category_path, class: 'button', remote: true
