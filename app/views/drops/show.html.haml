%p
  %strong Zone Name:
  = @drop.zone ? @drop.zone.name : "Unknown"
%p
  %strong Mob Name:
  = @drop.mob ? @drop.mob.name : "Unknown"
%p
  %strong Item Name:
  = @drop.item ? @drop.item.name : "Unknown"
%p
  %strong Loot Type:
  = @drop.loot_type ? @drop.loot_type.name : "Unknown"
%p
  %strong Drop Time:
  = @drop.drop_time
%p
  %strong Character Name:
  = @drop.character ? @drop.character.name : "Unknown"
%p
  %strong Loot Method:
  = @drop.loot_method_name
%p
  %strong Log Line:
  = @drop.log_line
%p
  %strong Chat:
  %p
    = h(@drop.chat).gsub(/\n/, '<br/>').html_safe

= link_to 'Edit', edit_drop_path(@drop)
\|
= link_to 'Back', drops_path
