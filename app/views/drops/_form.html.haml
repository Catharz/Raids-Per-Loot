    = f.text_field :zone_name
  .field
    = f.label :mob_name
    %br/
    = f.text_field :mob_name
  .field
    = f.label :character_name
    %br/
    = f.text_field :character_name
  .field
    = f.label :item_name
    %br/
    = f.text_field :item_name
  .field
    = f.label :eq2_item_id
    %br/
    = f.text_field :eq2_item_id
  .field
    = f.label :info_url
    %br/
    = f.text_field :info_url
  .field
    = f.label :drop_time
    %br/
    = f.datetime_select :drop_time
