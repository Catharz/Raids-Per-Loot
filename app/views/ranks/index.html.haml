%table#ranksTable
  %thead
    %tr
      %th Name
      %th Priority
      %th
      %th
      %th
  %tbody
    - @ranks.each do |rank|
      - cache rank do
        %tr{id: "rank_#{rank.id}"}
          %td= rank.name
          %td= rank.priority
          %td= link_to 'Show', rank, class: 'table-button', remote: true
          %td= link_to 'Edit', edit_rank_path(rank), class: 'table-button', remote: true
          %td= link_to 'Destroy', rank, :confirm => 'Are you sure?', :method => :delete, class: 'table-button', remote: true
%br/
= link_to 'New Rank', new_rank_path, class: 'button', remote: true
