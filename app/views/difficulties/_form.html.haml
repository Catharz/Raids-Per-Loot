= form_for @difficulty do |f|
  -if @difficulty.errors.any?
    #error_explanation
      %h2= "#{pluralize(@difficulty.errors.count, "error")} prohibited this difficulty from being saved:"
      %ul
        - @difficulty.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :rating
    = f.number_field :rating
  .actions
    = f.submit 'Save'
